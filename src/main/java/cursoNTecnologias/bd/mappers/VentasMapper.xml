<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cursoNTecnologias.bd.mappers.VentasMapper">
  <resultMap id="BaseResultMap" type="cursoNTecnologias.bd.domain.Ventas">
    <id column="idVenta" jdbcType="INTEGER" property="idventa" />
    <result column="clienteId" jdbcType="INTEGER" property="clienteid" />
    <result column="totalVenta" jdbcType="DOUBLE" property="totalventa" />
    <result column="fecha" jdbcType="DATE" property="fecha" />
  </resultMap>
  
  <resultMap id="consultarVentaByIdCliente" type="cursoNTecnologias.bd.domain.Ventas">
  	<id column="idVenta" jdbcType="INTEGER" property="idventa" />
    <result column="clienteId" jdbcType="INTEGER" property="clienteid" />
    <result column="totalVenta" jdbcType="DOUBLE" property="totalventa" />
    <result column="fecha" jdbcType="DATE" property="fecha" />
    <association property="cliente" column="clienteId" resultMap="cursoNTecnologias.bd.mappers.ClienteMapper.resultClienteDireccion"/>
  </resultMap>
  
  	<insert id="insertAuthor" useGeneratedKeys="true" keyProperty="idVenta" parameterType="cursoNTecnologias.bd.domain.Ventas">
	  insert into ventas (clienteId, totalVenta)
	  values (#{clienteId},#{totalVenta})
	</insert>
  
</mapper>